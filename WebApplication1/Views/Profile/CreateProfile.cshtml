@model CreateProfileViewModel
@{
	ViewBag.Message = "Register new profile";
}
<H2>@ViewBag.Titel</H2>
<div asp-validation-summary="All" class=text-danger>
	<span></span>
</div>
<form method="post" asp-action="CreateProfile">
	<div class="form-group row">
		<div class="col-sm-2">
			<label> Name </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="Name" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label>Adress </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="Adress" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label> Email </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="Email" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label> Private </label>
		</div>
		<div class="col-sm-4">
			<div class="form-check">
				<input type="checkbox" asp-for="IsPrivate" class="form-check-input" />
				<label class="form-check-label"> Yes </label>
			</div>
		</div>
	</div>
	<div class="form-group row">
		<div class="offset-2 col-sm-4">
			<button type="submit" class="btn btn-primary">Create Profile</button>
		</div>
	</div>
</form>
