@model Profile

<h1>Edit Profile</h1>

<form method="get" asp-controller="Profile" asp-action="UploadProfilePicture">
	<button type="submit" class="btn btn-primary">Edit profile picture</button>
</form>

<div class="formDiv">
	<form asp-action="Edit" method="post">
		<input type="hidden" asp-for="Id" />
		<input type="hidden" asp-for="UserId" />

		<label>Name: </label>
		<input type="text" asp-for="@Model.Name" />
		<br />

		<label>Adress: </label>
		<input type="text" asp-for="@Model.Adress" />
		<br />

		<label>Emails: </label>
		@for (int i = 0; i < Model.Email.Count; i++)
		{
			<input type="text" asp-for="@Model.Email[i]" />
		}
		<br />

		<label>Private profile: </label>
		<input type="checkbox" asp-for="@Model.IsPrivate" />
		<br />

		<button type="submit">Save Resume</button>
	</form>
</div>