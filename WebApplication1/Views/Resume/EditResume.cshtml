@model Resume

<h1>Edit Resume</h1>
<div class="formDiv">
	<form asp-action="Edit" method="post">
		<input type="hidden" asp-for="Id" />
		<input type="hidden" asp-for="ProfileId" />

		<label>Qualifications: </label>
		@for (int i = 0; i < Model.Qualification.Count; i++)
		{
			<input type="text" asp-for="@Model.Qualification[i]" />
		}
		<br />

		<label>Phone Numbers: </label>
		@for (int i = 0; i < Model.Phonenumber.Count; i++)
		{
			<input type="text" asp-for="@Model.Phonenumber[i]" />
		}
		<br />

		<label>Education: </label>
		@for (int i = 0; i < Model.Education.Count; i++)
		{
			<input type="text" asp-for="@Model.Education[i]" />
		}
		<br />

		<label>Experiences: </label>
		@for (int i = 0; i < Model.Experiences.Count; i++)
		{
			<input type="text" asp-for="@Model.Experiences[i]" />
		}
		<br />
		

		<button type="submit">Save Resume</button>
	</form>
</div>